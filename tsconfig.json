{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	},
	"compileOnSave": false,
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"global.d.ts"
	]
}
